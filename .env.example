# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development  # development, production, testing

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LiteLLM Configuration
LITELLM_MODEL=gpt-3.5-turbo  # default model to use
LITELLM_CACHE_ENABLED=true
LITELLM_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database Configuration (if using ChromaDB)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# Security
API_KEY=your_api_key_here  # For API authentication
CORS_ORIGINS=http://localhost:3000,http://localhost:8000  # Comma-separated list of allowed origins

# Memory Storage
MEMORY_PATH=./memory
